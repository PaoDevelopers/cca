root = true

# Most things should just be nice 8-sized tabs.
[*]
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 8
tab_size = 8

# 8-sized tabs is a bit too deep for JS, svelte, and HTML,
# so let's use 4...
[*.svelte]
tab_size = 4
indent_size = 4
[*.js]
tab_size = 4
indent_size = 4
[*.ts]
tab_size = 4
indent_size = 4
[*.html]
tab_size = 4
indent_size = 4

# PEP-8 uses 4 spaces.
[*.py]
indent_style = space
indent_size = 4

# Gleam standard style always uses 2 spaces.
[*.gleam]
indent_style = space
indent_size = 2

# YAML requires spaces.
[*.yaml]
indent_style = space
indent_size = 2

# A bit of an oddball but generally works reliably with spaces.
[*.md]
indent_style = space
indent_size = 2
